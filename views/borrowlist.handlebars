		{{/if}}
    <br> 
    <h2 style="text-align: center;">Borrow List</h2>
   <!--  Table -->
    <main class="d-flex table-data" style="height: 200px; overflow-y:scroll;">
       <table class="table table-striped">
         <thead>
           <tr>
             <th scope="col">ID</th>
             <th scope="col">Student Name</th>
             <th scope="col">Borrowed Book Name</th>
             <th scope="col">Author</th>
             <th scope="col">ISBN-13 Number</th>
             <th scope="col">Quantity</th>
             <th scope="col">Barcode</th>
             <th scope="col">Date/Time</th>
           </tr>
         </thead>
        <tbody id="tbody">

         {{#each borrowData}}
              <tr>
                <td>{{this.borrowid}}</td>
                <td>{{this.name}}</td>
                <td>{{this.book_name}}</td>
                <td>{{this.book_author}}</td>
                <td>{{this.isbn_number}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.barcode}}</td>
                <td>{{this.create_at}}</td>
              </tr>
          {{/each}}

          
         </tbody>
       </table>
     </main>
     <main id="notfound"></main>
   </section>
